
<?import javafx.scene.control.SplitPane?>


<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>


<?import java.lang.Integer?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Spinner?>
<SplitPane dividerPositions="0.8" fx:controller="view.MainView" xmlns:fx="http://javafx.com/fxml">
    <fx:define>
        <Integer fx:id="moins1" fx:value="-1" />
    </fx:define>
    <items>
        <VBox>
            <children>
                <AnchorPane>
                    <children>
                        <ListView fx:id="listeMatiereVM" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                    </children>
                </AnchorPane>
                <HBox spacing="5.0">
                    <children>
                        <TextField fx:id="textFieldNomMatiere" promptText="Nom de matiÃ¨re"/>
                        <Button mnemonicParsing="false" onAction="#clicAjouterMatiere" text="Ajouter" disable="${textFieldNomMatiere.text.empty}"/>
                        <Button disable="${listeMatiereVM.selectionModel.selectedIndex == moins1}" mnemonicParsing="false" onAction="#clicSupprimerMatiere" text="Supprimer" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox disable="${listeMatiereVM.selectionModel.selectedIndex == moins1}">
            <AnchorPane>
                <children>
                    <ListView fx:id="listeNoteVM" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                </children>
            </AnchorPane>
            <VBox spacing="5.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#clicAjouterNote" text="Ajouter" />
                    <Spinner fx:id="spinnerChoixNote" min="0" max="20" initialValue="10"/>
                    <Button mnemonicParsing="false" onAction="#clicSupprimerNote" text="Supprimer" disable="${listeNoteVM.selectionModel.selectedIndex == moins1}"/>
                </children>
            </VBox>
        </VBox>
    </items>

</SplitPane>