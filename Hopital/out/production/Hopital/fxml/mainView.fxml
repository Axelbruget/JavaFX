<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.mainView">
   <left>
      <BorderPane BorderPane.alignment="CENTER">
         <top>
            <HBox BorderPane.alignment="CENTER">
               <children>
                  <TextField fx:id="textFieldNomPatient" promptText="Nom du patient" />
                  <Button fx:id="clicValider" mnemonicParsing="false" onAction="#clicAjouterPatient" text="Valider" disable="${textFieldNomPatient.text.empty}"/>
               </children>
            </HBox>
         </top>
          <bottom>
              <Button fx:id="clicAjouterChambre" mnemonicParsing="false" onAction="#clicAjouterChambre" text="Ajouter une chambre"/>
          </bottom>
      </BorderPane>
   </left>
   <right>
      <BorderPane BorderPane.alignment="CENTER">
         <bottom>
            <BorderPane BorderPane.alignment="CENTER">
                <top>
                    <Label text="La liste des chambres" />
                </top>
                <center>
                    <ListView fx:id="listeChambres" BorderPane.alignment="CENTER" />
                </center>
            </BorderPane>
         </bottom>
         <top>
            <BorderPane BorderPane.alignment="CENTER">
                <top>
                    <Label text="Les patients de cette chambre" />
                </top>
                <center>
                    <ListView fx:id="listePatients" BorderPane.alignment="CENTER" />
                </center>
            </BorderPane>
         </top>
      </BorderPane>
   </right>
</BorderPane>
