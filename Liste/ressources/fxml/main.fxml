<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<?import java.lang.Integer?>
<?import javafx.scene.control.Label?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainView">
   <fx:define>
        <Integer fx:value ="-1" fx:id="nonSelectedValue"/>
   </fx:define>

   <left>
      <ListView fx:id="listeVue" BorderPane.alignment="CENTER" />
   </left>
   <bottom>
       <ToolBar BorderPane.alignment="CENTER">
           <Button mnemonicParsing="false" defaultButton="true" disable="${personneNameToolBar.text.empty}" onAction="#add" text="Add" />
           <Button fx:id="eventButton" text="Clean" disable="${personneNameToolBar.text.empty}"/>
           <TextField fx:id="personneNameToolBar" />
           <Button fx:id="deleteButton" mnemonicParsing="false" disable="${listeVue.selectionModel.selectedIndex == nonSelectedValue}" onAction="#delete" text="Remove" />
       </ToolBar>
   </bottom>
   <right>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
              <Label fx:id="affichageLabel"/>
         </center>
      </BorderPane>
   </right>
</BorderPane>
