<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainView">
    <top>
        <TextField fx:id="affichageLabel" />
    </top>
   <center>
      <ListView fx:id="listeVue" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
       <ToolBar BorderPane.alignment="CENTER">
           <Button mnemonicParsing="false" onAction="#add" text="Add" />
           <Button fx:id="eventButton" text="Clean" />
           <TextField fx:id="personneNameToolBar" />
           <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#delete" text="Remove" />
       </ToolBar>
   </bottom>
</BorderPane>
