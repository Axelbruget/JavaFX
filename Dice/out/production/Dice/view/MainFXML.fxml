<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainView">

    <left>
        <BorderPane BorderPane.alignment="CENTER">
            <left><Label fx:id="totalPlayerOne" text="Total :" BorderPane.alignment="CENTER" />
            </left>
         <center><Label fx:id="currentPlayerOne" text="Current :" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label text="Joueur 1 :" BorderPane.alignment="CENTER" />
         </top>
        </BorderPane>
    </left>
    <center>
        <BorderPane BorderPane.alignment="CENTER">
            <center><Label fx:id="result" /></center>
            <top><Button fx:id="roll" onAction="#rollDice" text="Roll" BorderPane.alignment="CENTER" />
            </top>
            <bottom><Button fx:id="hold" onAction="#hold" text="Hold" BorderPane.alignment="CENTER" />
            </bottom>
        </BorderPane>
    </center>
   <right>
       <BorderPane BorderPane.alignment="CENTER">
           <left><Label fx:id="totalPlayerTwo" text="Total :" BorderPane.alignment="CENTER" />
           </left>
           <center><Label fx:id="currentPlayerTwo" text="Current :" BorderPane.alignment="CENTER" />
           </center>
         <top>
            <Label text="Joueur 2 :" BorderPane.alignment="CENTER" />
         </top>
       </BorderPane>
   </right>
   <bottom>
      <HBox prefHeight="202.0" prefWidth="898.0" BorderPane.alignment="CENTER">
         <children>
                <Button fx:id="new" text="New Game" />
                <Button fx:id="quit" text="Quit" />
         </children>
      </HBox>
   </bottom>
   <top>
      <Label fx:id="currentPlayerPlaying" BorderPane.alignment="CENTER" />
   </top>
</BorderPane>
